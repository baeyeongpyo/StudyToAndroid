<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/animationContrainMain"
    tools:context=".KOTLIN_Study.Material_Design.animationViewTestActivity">


    <Button
        android:id="@+id/transitionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/animation_Textview"
        android:text="Animation Test"
        app:layout_constraintTop_toBottomOf="@+id/transitionButton"
        app:layout_constraintStart_toStartOf="@+id/transitionButton"
        app:layout_constraintEnd_toEndOf="@+id/transitionButton"
        />

</android.support.constraint.ConstraintLayout>